<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hu.mapper.BorrowRecordsMapper">

    <select id="list" resultType="hu.vo.BorrowRecordsVO">
        select * from v_borrow_records
        <where>
            <if test="recordId != null">
                record_id = #{recordId}
            </if>
            <if test="borrowStatus != null">
                and borrow_status = #{borrowStatus}
            </if>
            <if test="readerId != null">
                and reader_id = #{readerId}
            </if>
            <if test="bookTitle != null">
                and book_title like concat('%',#{bookTitle},'%')
            </if>
            <if test="category != null">
                and category = #{category}
            </if>
        </where>
    </select>
</mapper>